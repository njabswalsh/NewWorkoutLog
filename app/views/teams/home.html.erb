<h1>My Teams</h1>

<% user = User.find(session[:user_id]) %>
<% if user %>


<div class="background-well btn-group-vertical center-block">
	<% user.teams.each do |team| %>
	<%= link_to team.name, "/teams/" + team.team_id %>
	<br/>
	<% end %>
	
	<br/>

	<%= link_to "Create New Team", "/teams/new", class: "btn btn-primary", style:"border-radius:14px;margin-bottom:5px" %>
	<%= link_to "Join Team", "/teams/join", class: "btn btn-primary", style:"border-radius:14px" %>

</div>


<% else %>
You must be logged in to view teams.
<% end %>
