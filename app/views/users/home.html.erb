<% content_for :title, "Users" %>
<div class="background-well max-well-width">
<% if session[:user] %>
<div class="btn-group-vertical center-block" role="group">
	<%= link_to "Create New Post", "/posts/create", class: "btn btn-primary", style:"border-radius:4px;margin-bottom:5px" %>
	<%= link_to "View My Workouts", "/posts/index", class: "btn btn-primary" , style:"border-radius:4px;margin-bottom:5px" %>
	<%= link_to "View My Teams", "/teams", class: "btn btn-primary" , style:"border-radius:4px;margin-bottom:5px" %>
	<%= link_to "Sign Out", "/users/logout", class: "btn btn-primary", style:"border-radius:4px" %>
</div>
<% else %>
	<div class="btn-group-vertical center-block" role="group">	
		<%= link_to "Create New Account", "new", class: "btn btn-primary", style:"border-radius:4px;margin-bottom:5px" %>
		<%= link_to "Login", "login", class: "btn btn-primary", style:"border-radius:4px;margin-bottom:5px" %>
	</div>
<% end %>
</div>