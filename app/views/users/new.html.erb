<% content_for :title, "New User" %>
<% if flash[:error] %>
	<p class="error_message"><%= flash[:error] %></p>
<% end %>
<% if session[:user] %>
	<p>You are already logged in!</p>
<% else %>
	<%= form_tag("create", :method => "post") do %>
		<p><%= label_tag(:first_name, "Enter your first name:") %>
		<%= text_field_tag(:first_name) %>
		<br/><%= label_tag(:last_name, "Enter your last name:") %>
		<%= text_field_tag(:last_name) %>
		<br/><%= label_tag(:login, "Enter your username:") %>
		<%= text_field_tag(:login) %>
		<br/><%= label_tag(:password_1, "Enter your password:") %>
		<%= password_field_tag(:password_1) %>
		<br/><%= label_tag(:password_2, "Enter your password again:") %>
		<%= password_field_tag(:password_2) %>
		<br/><%= submit_tag("Create Account", class: "btn btn-primary") %></p>
	<% end %>
<% end %>
